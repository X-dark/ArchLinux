post_install() {
    update-desktop-database -q
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
    echo ""
    echo "Note: the binary is called 'thunderbird-nightly'"
    echo ""
}

post_upgrade() {
    update-desktop-database -q
    gtk-update-icon-cache -q -t -f usr/share/icons/hicolor
}

post_remove() {
    post_upgrade
}